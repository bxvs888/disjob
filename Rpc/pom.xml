		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.xml</include>
					<include>**/*.properties</include>
				</includes>
			</resource>

			<resource>
				<directory>src/main/resources</directory>

				<excludes>
					<exclude>test/**</exclude>
					<exclude>dev/**</exclude>
				</excludes>

			</resource>
			<resource>
				<directory>src/main/resources/${profiles.active}</directory>
				<targetPath>${basedir}/src/main/resources</targetPath>
			</resource>
		</resources> -->
	</build>
</project>
